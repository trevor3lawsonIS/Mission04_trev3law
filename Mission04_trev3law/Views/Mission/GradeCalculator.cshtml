@{
    ViewData["Title"]="Grade Calculator";
}


<!-- Grade Calculator Section, with some elements being hidden until form is submitted -->
<h3 id="gradeCalculator" onload="load()">Grade Calculator:</h3>
<h3 onload="load()" id="finalGrade"></h3>
<form id="inputForm" onload="load()">
    <label for="assignments">Assignments (enter just the number without the "%" sign):</label>
    <input type="number" id="assignments" name="assignments" step=".01" min="0" max="100"><br />
    <label for="groupProjects">Group Projects (enter just the number without the "%" sign):</label>
    <input type="number" id="groupProjects" name="groupProjects" step=".01" min="0" max="100"><br />
    <label for="quizzes">Quizzes (enter just the number without the "%" sign):</label>
    <input type="number" id="quizzes" name="quizzes" step=".01" min="0" max="100"><br />
    <label for="midtermExam">Midterm Exam (enter just the number without the "%" sign):</label>
    <input type="number" id="midtermExam" name="midtermExam" step=".01" min="0" max="100"><br />
    <label for="finalExam">Final Exam (enter just the number without the "%" sign):</label>
    <input type="number" id="finalExam" name="finalExam" step=".01" min="0" max="100"><br />
    <label for="intex">Intex (enter just the number without the "%" sign):</label>
    <input type="number" id="intex" name="intex" step=".01" min="0" max="100"><br />
    <input type="button" id="submit" value="Calculate" />
</form>

